#version 430 core

layout(std140, binding = 0) uniform InstanceData
{
	struct {
		float f;
		vec4 v4;
		mat3 m3;
		vec3 v3;
	} data[10];
} instData;

out vec4 vcolor;

#define ACCESS instData.data[gl_InstanceID]
void main()
{
	
	gl_Position = vcolor = mat4(ACCESS.v4, ACCESS.v4, ACCESS.v4, ACCESS.v4) * ACCESS.v4 + (ACCESS.m3 * ACCESS.v3 * ACCESS.f).xxxx;
    gl_Position.x /= gl_VertexID;
    gl_Position.y += gl_VertexID;
    gl_Position.z = abs(gl_Position.x) + inversesqrt(float(gl_VertexID)/12001.f);
    gl_Position.w = 1.f;
}