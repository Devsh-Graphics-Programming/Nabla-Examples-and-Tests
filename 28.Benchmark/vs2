#version 430 core

layout(std140, binding = 0) uniform InstanceData
{
	struct {
		mat4 m4;
		mat3 m3;
		vec4 v4;
		vec3 v3;
	} data[10];
} instData;

out vec4 vcolor;

#define ACCESS instData.data[gl_InstanceID]
void main()
{
	
	gl_Position = vcolor = ACCESS.m4 * ACCESS.v4 + (ACCESS.m3 * ACCESS.v3).xxxx;
}