#version 430 core

layout(std140, binding = 0) uniform InstanceData
{
	struct {
		vec3 v3;
		float f;
		vec4 v4;
		mat4 m4;
	} data[10];
} instData;

out vec4 vcolor;

#define ACCESS instData.data[gl_InstanceID]
void main()
{
	
	gl_Position = vcolor = ACCESS.m4 * ACCESS.v4 + (mat3(ACCESS.v3, ACCESS.v3, ACCESS.v3) * vec3(ACCESS.f)).xxxx;
}