#version 430 core

layout(std140, binding = 0) uniform InstanceData
{
	struct {
		vec3 v3;
		vec4 v4;
		mat3 m3;
		float f;
	} data[10];
} instData;

out vec4 vcolor;

#define ACCESS instData.data[gl_InstanceID]
void main()
{
	
	gl_Position = vcolor = mat4(ACCESS.v4,ACCESS.v4,ACCESS.v4,ACCESS.v4) * vec4(ACCESS.f) + (ACCESS.m3 * ACCESS.v3).xxxx;
}